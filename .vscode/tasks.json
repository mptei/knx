{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "CMAKE",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "knx-linux"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "label": "g++-6 build active file",
            "command": "/usr/bin/g++-6",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "/usr/bin"
            }
        }
    ]
}